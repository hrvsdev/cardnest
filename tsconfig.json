{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"skipLibCheck": true,
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"baseUrl": "src",
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"jsx": "react-jsx",
		"moduleResolution": "bundler",
		"paths": {
			"@firebase/*": ["firebase/*"],
			"@components/*": ["components/*"],
			"@utils/*": ["utils/*"],
			"@pages/*": ["pages/*"],
			"@data/*": ["data/*"],
			"@hooks/*": ["hooks/*"],
			"@theme/*": ["theme/*"],
			"@styles/*": ["styles/*"],
			"@t/*": ["types/*"]
		}
	},
	"include": ["src"]
}
