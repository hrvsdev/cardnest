{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"skipLibCheck": true,
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"paths": {
			"@components/*": ["components/*"],
			"@utils/*": ["utils/*"],
			"@pages/*": ["pages/*"],
			"@hooks/*": ["hooks/*"],
			"@styles/*": ["styles/*"],
			"@t/*": ["types/*"]
		}
	}
}
